@{
    Layout = "~/Views/Dashboard/Dashboard.cshtml";
}
<section>
    <br />
    <div class="container" style="padding: 50px; background: rgba(113, 116, 137, 0.16); border-radius:20px;">
        @using (Html.BeginForm("AddImageAsync", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {<h1 style="color:white;">Add Image</h1>


            <div class="form-group">
                <label for="ImgID" style="color:#ffff00">ID</label>
                <input id="ImgID" name="ImgID" type="text" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="ImgName" style="color:#ffff00">Name</label>
                <input id="ImgName" name="ImgName" type="text" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="ImgDesc" style="color:#ffff00">Description</label>
                <input id="ImgDesc" name="ImgDesc" type="text" value="" class="form-control" />
            </div>

            <input id="Image" name="Image" type="file" class="form-control-file" style="color:#ffff00" accept="image" />
            <br /> <br />

            <button type="submit" class="btn" style="background-color:#ffff00;color:black">Add</button>
        }
    </div>
</section>

