@{
    Layout = "~/Views/Dashboard/Dashboard.cshtml";
}

<section>
    <br />
    <div class="container" style="padding: 50px; background: rgba(113, 116, 137, 0.16); border-radius:20px;">
        @using (Html.BeginForm("AddUserAsync", "SignUp", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {<h1 style="color:white;">Add User</h1>


            <div class="form-group">
                <label for="AdminID" style="color:#ffff00">ID</label>
                <input id="AdminID" name="AdminID" type="text" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="AdminName" style="color:#ffff00">Name</label>
                <input id="AdminName" name="AdminName" type="text" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="AdminRole" style="color:#ffff00">Role</label>
                <input id="AdminRole" name="AdminRole" type="text" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="AdminPassword" style="color:#ffff00">Password</label>
                <input id="AdminPassword" name="AdminPassword" type="text" value="" class="form-control" />
            </div>

                <input id="AdminPic" name="AdminPic" type="file" style="color:#ffff00" accept="image"/>
            <br /> <br />

            <button type="submit" class="btn" style="background-color:#ffff00;color:black">Sign Up</button>
        }
    </div>
</section>

